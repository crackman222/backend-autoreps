datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  workouts  Workout[]
  weight    Float?
  height    Float?
  age       Int?
}

model Workout {
  id         Int      @id @default(autoincrement())
  reps       Int
  duration   Int?
  timestamp  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
}

model WorkoutSession {
  id           Int      @id @default(autoincrement())
  userId       Int
  reps         Int
  validReps    Int
  invalidReps  Int
  durationSec  Int
  avgAngle     Float?
  date         DateTime @default(now())
  
  user         User @relation(fields: [userId], references: [id])
}
