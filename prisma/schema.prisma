datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  workouts  Workout[]
}

model Workout {
  id         Int      @id @default(autoincrement())
  reps       Int
  duration   Int?
  timestamp  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
}
